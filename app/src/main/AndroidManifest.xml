<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buildyourownadventure">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BuildYourOwnAdventure">
        <activity
            android:name=".CharacterActivity"
            android:exported="false" />

        <service
            android:name=".MyMusicService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".roll_the_dice"
            android:exported="false" />
        <activity android:name=".ToolsActivity" />
        <activity android:name=".SetupActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".DictionaryActivity" />
        <activity android:name=".PlayerActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BgMusicActivity" />
    </application>

</manifest>